<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    android:layout_marginEnd="@dimen/margin_item_horizontal"
    android:layout_marginStart="@dimen/margin_item_horizontal"
    android:layout_marginTop="@dimen/margin_item_top"
    >
    <RelativeLayout
        android:padding="@dimen/card_content_pading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:textColor="@color/txt_darked"
            android:textSize="@dimen/txt_size_titles"
            android:text="11:35 AM"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_marginTop="@dimen/margin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/txt_size_subtitles"
            android:text="24/12/2022"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_id_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvId"
            android:textColor="@color/dark_gray"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/txt_size_subtitles"
            android:text="Ticket #104"
            />

    </LinearLayout>


        <View
            android:layout_marginStart="@dimen/margin_divisor"
            android:layout_marginEnd="@dimen/margin_divisor"
            android:layout_width="@dimen/divisor_width"
            android:layout_height="match_parent"
            android:background="#7C838383"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTicketTitle"
                android:textColor="@color/txt_darked"
                android:textSize="@dimen/txt_size_titles"
                android:text="Repair Sink asdadwwadadawdwaodawdoawmdoawmdoawmdwa"
                android:ellipsize="end"
                android:maxLines="1"
                />
            <TextView
                android:layout_marginTop="@dimen/margin_date"
                android:layout_width="@dimen/address_width"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddress"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/txt_size_subtitles"
                android:maxLines="3"
                android:text="37 Greennight Cres maosmdaosdmaosmdaosmdoasmdoasmdoasmdaosdmaosdmasodmaosmdas"
                android:ellipsize="end"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/item_button_view_width"
            android:id="@+id/btnViewTicket"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/primary"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_button_text_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="View Ticket"
                android:maxLines="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="@dimen/item_button_text_padding"
                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>